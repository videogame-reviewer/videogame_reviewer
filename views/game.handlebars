<section class="container">
  <h3 class="gallery-name">{{game.name}}<br> <span id="genreHB">Genre: {{game.genre}}</span></h3>
    <img src="/images/{{game.filename}}" alt="{{game.[0].description}}">
  {{!-- <h4>Opening Hour: {{format_time gallery.starting_date}}</h4>
  <h4>Closing Hour: {{format_time gallery.ending_date}}</h4> --}}
  <section class="flex-row justify-center">
    {{#each game.reviews as |reviews|}}
    {{> reviews-details}}
    {{/each}}
    <div class="gallery-name">{{game.description}}</div>
  </section>
</section>

<section id="comments">
    {{#if loggedIn}}
  <section class="top">
    <div class="gButtons">
      <button onclick = "window.location = '{{game.purchaselink}}', '_blank'"
 class="buy">Press here to buy!</button>

    </div>
  </section>

  <section class="re">
    <form class="leaveReview">
      <label class="gallery-name">What do ya think about it?</label>
      <input type="text" name="ReviewText" id="review-input">
      <button class="makeReview" type="submit">Leave a review.</button>
    </form>
    {{reviews-details}}
  </section>
    {{else}}
      <a href="/login"></a>
    {{/if}}
</section>
<script src="../js/review.js"></script>